


<!DOCTYPE html>


<html>
<head>
    <title>The World - @ViewBag.Title</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <div id="sidebar">
        <img src="~/img/profile-pic.jpg" alt="Profile Picture" class="headshot" />
        <span id="username">John Snow</span>
        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>

    </div>

    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sidebarToggle">Toggle Menu</button>
            </div>
            @RenderBody()
        </div>

        <div id="footer">
            &copy; 2017
        </div>
    </div>

    <script src="~/lib/jQuery/dist/jquery.min.js"></script>
    @RenderSection("scripts", false)

    <script src="~/js/site.js">



    </script>


</body>
</html>